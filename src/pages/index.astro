      }

      .mystic-hover::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--mystic-gradient);
        opacity: 0;
        border-radius: inherit;
        transition: opacity 0.4s ease;
        z-index: -1;
      }

      .mystic-hover:hover::before {
        opacity: 0.1;
      }

